import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
    int l=s.nextInt();
     int b=s.nextInt();   
    int per=2*(l+b);
    System.out.printf("%d\n",per);
    int quan=(l*b);
    System.out.printf("%d\n",quan);
    }
}
